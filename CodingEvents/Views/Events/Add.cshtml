@using CodingEvents.ViewModels;
@model CodingEvents.ViewModels.AddEventViewModel;

<h1>Add Event</h1>

<form method="post">

    <div asp-controller="Events" action="Add" class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactEmail"></label>
        <input asp-for="ContactEmail" />
        <span asp-validation-for="ContactEmail"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfAttendees"></label>
        <input asp-for="NumberOfAttendees" />
        <span asp-validation-for="NumberOfAttendees"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type">Event Type</label>
        <select asp-for="Type" asp-items="Model.EventTypes"></select>
    </div>

    <div class="form-group">
        <label asp-for="Registration">Attendee Registration</label>
        <input asp-for="Registration" type="checkbox"/>
        <span asp-validation-for="Registration"></span>
    </div>

    <input type="submit" value="Add Event" class="btn btn-primary" />
</form>