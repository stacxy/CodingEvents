@using CodingEvents.ViewModels;
@model AddEventViewModel;

<h1>Add Event</h1>

<form method="post">

    <div asp-controller="Events" action="Add" class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactEmail"></label>
        <input asp-for="ContactEmail" />
        <span asp-validation-for="ContactEmail"></span>
    </div>

    <input type="submit" value="Add Event" class="btn btn-primary" />
</form>